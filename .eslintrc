{
  "extends": ["eslint:recommended", "plugin:chai-friendly", "plugin:chai-expect/recommended"],
  "ecmaFeatures": {
    "modules": true,
    "spread": true,
    "restParams": true
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "globals": {
    "expect": true
  },
  "env": {
    "node": true,
    "browser": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-console": 0,
    "no-unused-vars": 1
  }
}
